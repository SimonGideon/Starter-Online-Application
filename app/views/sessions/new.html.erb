<%= stylesheet_link_tag 'forms' %>
<%= form_tag login_path,  class: "form" do %>
  <p class="form-title">Log in</p>
 <div class="input-container">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, placeholder: "Enter email", required: true %>
  </div>
  <div class="input-container">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, placeholder: "Enter password", required: true %>
  </div>
    <%= submit_tag "Log in", class: "submit" %>
    <p class="text-center">
    <%= link_to "sign up", root_path, class: "link" %>
    </p>
  </div>
<% end %>


